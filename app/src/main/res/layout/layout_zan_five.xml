<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_skimedCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:drawableLeft="@mipmap/icon_skim_times"
        android:gravity="center"
        android:text="查看"
        android:textColor="@color/font_black" />

    <View
        android:layout_width="0dip"
        android:layout_height="1px"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_likedCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:button="@null"
        android:clickable="false"
        android:drawableLeft="@drawable/selector_icon_praise"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="赞"
        android:textColor="@color/font_black"/>
    <View
        android:layout_width="0dip"
        android:layout_height="1px"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_conmentCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/icon_commend"
        android:gravity="center"
        android:text="评论"
        android:textColor="@color/font_black"/>
    <View
        android:layout_width="0dip"
        android:layout_height="1px"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:button="@null"
        android:clickable="false"
        android:drawableLeft="@drawable/selector_icon_collection"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="收藏"
        android:textColor="@color/font_black" />

    <View
        android:layout_width="0dip"
        android:layout_height="1px"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dip"
        android:drawableLeft="@mipmap/icon_share_button"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/font_black"/>
</LinearLayout>