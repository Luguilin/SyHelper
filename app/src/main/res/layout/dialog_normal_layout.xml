<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_l"
        android:minHeight="120dip"
        android:minWidth="200dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="您有一个新的提醒"
            android:textColor="#2EB36D" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#557e7e7e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_normal_button_bg_left"
                android:gravity="center"
                android:text="确定"
                android:textColor="#2EB36D" />
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#557e7e7e" />
            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_normal_button_bg_right"
                android:gravity="center"
                android:text="取消"
                android:textColor="#2EB36D" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>