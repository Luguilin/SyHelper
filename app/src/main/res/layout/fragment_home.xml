<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:translationZ="15dp"
        android:elevation="15dp"
        android:layout_height="wrap_content">

        <RadioGroup
            android:translationZ="15dp"
            android:elevation="15dp"
            android:id="@+id/rg_title_home"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/green_theme"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_title_recommend"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:textSize="19sp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/icon_color_home_title"/>
            <RadioButton
                android:id="@+id/rb_title_video"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:button="@null"
                android:gravity="center"
                android:text="视频"
                android:textColor="@color/icon_color_home_title"/>
            <RadioButton
                android:id="@+id/rb_title_gree_video"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="14sp"
                android:gravity="center"
                android:text="大片"
                android:textColor="@color/icon_color_home_title"/>
            <RadioButton
                android:id="@+id/rb_title_great_people"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="14sp"
                android:text="名家"
                android:textColor="@color/icon_color_home_title"/>
            <RadioButton
                android:id="@+id/rb_title_together"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:button="@null"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/icon_color_home_title"/>
        </RadioGroup>
        <com.syhelper.view.UnderlinePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="3dp"

            android:layout_marginBottom="5dip"
            android:layout_gravity="bottom"/>
    </FrameLayout>
    <com.syhelper.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>